<mvc:View
    xmlns:launchpad="sap.ushell.ui.launchpad"
    controllerName="com.collak.home.central.central.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:cards="sap.f.cards"
>
    <Page showHeader="false">
        <core:Fragment
            fragmentName="com.collak.home.central.central.view.fragment.ShellBar"
            type="XML"
        />
        <IconTabBar
            id="shellTabBar"
            class="sapUiResponsiveContentPadding"
            expandable="false"
        >
            <items>
                <IconTabFilter
                    text="My home"
                    key="myHome"
                >
                    <Title
                        text="Aplikace"
                        level="H1"
                    />
                    <IconTabBar
                        id="MyHomeTabBar"
                        backgroundDesign="Transparent"
                        headerBackgroundDesign="Transparent"
                        expandable="false"
                    >
                        <items>
                            <IconTabFilter
                                text="Favorites"
                                key="favorites"
                            >
                                <FlexBox
                                    wrap="Wrap"
                                    justifyContent="Start"
                                    class="customFlexBox"
                                    items="{tileModel>/tiles}"
                                >
                                    <GenericTile
                                        header="{tileModel>title}"
                                        subheader="{tileModel>subheader}"
                                        press=".handleTilePress"
                                        class="sapUiTinyMargin"
                                        mode="ContentMode"
                                    >
                                        <TileContent unit="{tileModel>uom}">
                                            <ImageContent
                                                src="{tileModel>icon}"
                                            />
                                            <NumericContent
                                                scale="{tileModel>scale}"
                                                value="{tileModel>value}"
                                                valueColor="{tileModel>meaning}"
                                                indicator="{tileModel>pointer}"
                                                withMargin="false"
                                            />
                                        </TileContent>
                                        <customData>
                                            <core:CustomData
                                                key="route"
                                                value="{tileModel>route}"
                                                writeToDom="true"
                                            />
                                        </customData>
                                    </GenericTile>
                                </FlexBox>
                                <FlexBox
                                    wrap="Wrap"
                                    justifyContent="Start"
                                />
                            </IconTabFilter>
                            <IconTabFilter
                                text="Other"
                                key="other"
                            />
                        </items>
                    </IconTabBar>
                    <l:VerticalLayout class="sapUiContentPadding">
                        <Title
                            text="ToDos"
                            level="H1"
                        />
                        <f:Card
                        >
                            <f:header>
                                <cards:Header
                                    title="Todo">
                                </cards:Header>
                            </f:header>
                                
                            <f:content>
                                <List>
                                    <StandardListItem
                                        title="Approve Purchase Order 4500077070"
                                        description="Medium Priority"
                                    />
                                    <StandardListItem
                                        title="Approve Purchase Contract 4600005179"
                                        description="Medium Priority"
                                    />
                                </List>
                            </f:content>
                        </f:Card>
                    </l:VerticalLayout>
                </IconTabFilter>

                <IconTabFilter
                    text="Info"
                    key="info"
                >
                    <VBox class="sapUiSmallMargin">
                        <form:SimpleForm
                            id="SimpleFormDisplay354"
                            editable="false"
                            layout="ResponsiveGridLayout"
                            title="Address"
                            labelSpanXL="3"
                            labelSpanL="3"
                            labelSpanM="3"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="4"
                            emptySpanL="4"
                            emptySpanM="4"
                            emptySpanS="0"
                            columnsXL="1"
                            columnsL="1"
                            columnsM="1"
                            singleContainerFullSize="false"
                        >
                            <form:content>
                                <Label text="Name" />
                                <Text
                                    id="nameText"
                                    text="{SupplierName}"
                                />
                                <Label text="Street/No." />
                                <Text text="{Street} {HouseNumber}" />
                                <Label text="ZIP Code/City" />
                                <Text text="{ZIPCode} {City}" />
                                <Label text="Country" />
                                <Text
                                    id="countryText"
                                    text="{Country}"
                                />
                            </form:content>
                        </form:SimpleForm>
                    </VBox>
                </IconTabFilter>
            </items>
        </IconTabBar>
    </Page>
</mvc:View>
