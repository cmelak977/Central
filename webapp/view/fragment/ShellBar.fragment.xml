<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
>
    <f:ShellBar
        id="shellbar_main"
        title="{viewModel>/shellTitle}"
        homeIcon="https://domov.collak.cz/api/mc.png"
        showCopilot="false"
        showSearch="false"
        showNotifications="true"
        notificationsNumber="{tileModel>/head/notification}"
        homeIconPressed="handleHomeIconPress"
    >
        <f:menu>
            <Menu id="menu_main">
                <MenuItem
                    id="menu_item_1"
                    text="Domov"
                    icon="sap-icon://flight"
                />
                <MenuItem
                    id="menu_item_2"
                    text="Svátky"
                    icon="sap-icon://flight"
                />
                <MenuItem
                    id="menu_item_3"
                    text="Objednávky"
                    icon="sap-icon://car-rental"
                />
            </Menu>
        </f:menu>
        <f:profile>
            <Avatar
                press="handleAvatarPress"
                id="avatarId"
                initials="{tileModel>/head/inicials}"
                src="{tileModel>/head/image}"
            />
        </f:profile>
    </f:ShellBar>
</core:FragmentDefinition>
